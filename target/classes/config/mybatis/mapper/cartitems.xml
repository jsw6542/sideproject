<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ci">

	<!-- 장바구니 상품 추가 -->	
	<insert id="cartitems_insertitem" parameterType="cartitems">
		insert into cartitems values(
				cartitems_seq.nextVal,
				#{cartnum},
				#{productnum},
				#{quantity}
		)
	</insert>
	
	<!-- cartnum으로 장바구니 상품의 번호 조회  상품 번호로 상품 정보를 가져와야함-->
	<select id="cartitems_selectcartitemslist" parameterType="cartitems">
		select * from cartitems where cartnum = ${cartnum}
	</select>
	
	
</mapper>












