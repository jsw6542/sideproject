	<!-- 주문목록 조회 -->
	<select id="orders_orderlist" resultType="OrderListVO" parameterType="orders">
		select o.ordernum, o.paymenttime, o.totalprice, od.buyername, 
			   od.buyeradress1,od.buyeradress3, od.quantity, od.result, p.productname
		from orders o
		join orderdetail od on o.ordernum = od.ordernum
		join product p on od.productnum = p.productnum
		where o.memberid = #{memberid}
		order by o.paymenttime desc;
	</select>
	
	
</mapper>












